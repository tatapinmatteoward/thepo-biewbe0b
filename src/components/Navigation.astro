---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/articles', label: 'Articles' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
  { href: '/subscribe', label: 'Subscribe' },
  { href: '/blog', label: 'Blog' }
];
---

<nav class="bg-[#4b0026] shadow-lg">
  <div class="container mx-auto px-4 py-3">
    <div class="flex justify-between items-center">
      <a href="/" class="text-2xl font-bold text-[#556b2f] hover:text-white transition-colors duration-300">The Poultry Post</a>
      
      <!-- Desktop Menu -->
      <div class="hidden md:flex gap-6">
        {navItems.map((item) => (
          <a 
            href={item.href} 
            class="text-white hover:text-[#556b2f] transition-colors duration-300 font-medium"
          >
            {item.label}
          </a>
        ))}
      </div>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden text-white">
        <i class="fas fa-bars text-2xl"></i>
      </button>
    </div>
    
    <!-- Mobile Menu (hidden by default) -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 flex flex-col gap-3">
      {navItems.map((item) => (
        <a 
          href={item.href} 
          class="text-white hover:text-[#556b2f] transition-colors duration-300 py-2 px-4 rounded hover:bg-[#556b2f] hover:bg-opacity-20"
        >
          {item.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<!-- Client-side JavaScript for mobile toggle -->
<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  
  if (button && menu) {
    button.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  }
</script>

<style>
  @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');
</style>