---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Feathered Fantasia: Chicken Cabaret Gallery";
const pageDescription = "Dive into a vibrant collection of poultry-inspired artwork, quirky animations, and cabaret snapshots that capture the playful spirit of Chicken Cabaret. Explore our feathered world through stunning visuals!";
const featuredHighlights = [
  {
    title: "Animated Avian Adventures",
    description: "Watch as our feathered friends come to life in looping animationsâ€”think disco-dancing ducks and jazz-jiving chickens!",
    icon: "fas fa-feather-alt"
  },
  {
    title: "Vintage Cabaret Posters",
    description: "Bold, retro designs bursting with feathers, spotlights, and poultry pizzazz. *Perfect for a cluckin' good wall hang!*",
    icon: "fas fa-palette"
  },
  {
    title: "Behind-the-Scenes Snaps",
    description: "Candid shots of performers prepping for the show, complete with sequined costumes and feathered headdresses.",
    icon: "fas fa-camera"
  }
];

const galleryImages = [
  { id: 1, title: "Disco Duck Dance", category: "animated" },
  { id: 2, title: "Chicken Cabaret Poster", category: "poster" },
  { id: 3, title: "Pre-show Prep", category: "behind scenes" },
  { id: 4, title: "Jazz Juggling Hen", category: "animated" },
  { id: 5, title: "Retro Stage Set", category: "poster" },
  { id: 6, title: "Costume Rehearsal", category: "behind scenes" },
  { id: 7, title: "Flamenco Fowl", category: "animated" },
  { id: 8, title: "Cabaret Spotlight", category: "poster" },
  { id: 9, title: "Backstage Chaos", category: "behind scenes" }
];
---

<Layout title={pageTitle} description={pageDescription}>
  {/* Hero Section */}
  <div class="relative bg-gradient-to-r from-purple-600 via-pink-500 to-purple-700 py-24 overflow-hidden">
    <div class="absolute inset-0 z-0">
      <div class="absolute top-0 left-0 w-full h-full bg-[url('data:image/svg+xml;base64,')] opacity-20"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="flex flex-col items-center text-center">
        <div class="animate-bounce mb-4">
          <i class="fas fa-feather-alt text-5xl text-yellow-300"></i>
        </div>
        <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 tracking-wide animate-pulse">
          Feathered Fantasia
        </h1>
        <h2 class="text-xl md:text-3xl font-light text-yellow-200 mb-8 italic">
          Cluck into the Feathered World of Poultry Pop Culture!
        </h2>
        <p class="max-w-2xl text-lg text-purple-100 mb-10">
          Dive into a vibrant collection of poultry-inspired artwork, quirky animations, and cabaret snapshots that capture the playful spirit of Chicken Cabaret.
        </p>
        <div class="inline-flex items-center bg-white text-purple-700 px-6 py-3 rounded-full font-bold shadow-lg transform transition duration-300 hover:scale-105">
          <i class="fas fa-magic mr-2"></i> Explore the Gallery
        </div>
      </div>
    </div>
    
    <div class="absolute bottom-0 left-0 w-full h-16 bg-gradient-to-t from-purple-900 to-transparent"></div>
  </div>

  {/* Welcome Section */}
  <section class="py-16 bg-gradient-to-br from-purple-50 to-pink-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-purple-800 mb-4">Welcome to the Chicken Cabaret Gallery</h2>
          <div class="w-24 h-1 bg-pink-500 mx-auto"></div>
        </div>
        
        <div class="bg-white rounded-2xl shadow-xl p-6 md:p-8 border-l-8 border-purple-500 transform transition duration-500 hover:shadow-2xl">
          <p class="text-lg text-gray-700 leading-relaxed">
            Step right up to our dazzling gallery, where every image flutters with vibrant energy and whimsical charm. 
            From animated hens strutting their stuff to colorful posters of our cabaret stars, this space showcases the quirky artistry 
            that makes Chicken Cabaret unforgettable.
          </p>
        </div>
      </div>
    </div>
  </section>

  {/* Featured Highlights */}
  <section class="py-16 bg-purple-900">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Featured Highlights</h2>
        <div class="w-24 h-1 bg-pink-500 mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {featuredHighlights.map((highlight, index) => (
          <div key={index} class="bg-gradient-to-br from-purple-700 to-pink-600 rounded-2xl p-6 shadow-xl transform transition duration-500 hover:-translate-y-3 hover:shadow-2xl">
            <div class="text-center">
              <div class="inline-flex items-center justify-center w-16 h-16 bg-yellow-400 rounded-full mb-4 text-purple-900 text-2xl">
                <i class={highlight.icon}></i>
              </div>
              <h3 class="text-xl font-bold text-white mb-3">{highlight.title}</h3>
              <p class="text-purple-100">{highlight.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* Gallery Grid */}
  <section class="py-16 bg-gradient-to-br from-pink-50 to-purple-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-purple-800 mb-4">Gallery Collection</h2>
        <p class="max-w-2xl mx-auto text-gray-600">A vibrant showcase of poultry-inspired creativity</p>
        <div class="w-24 h-1 bg-pink-500 mx-auto mt-4"></div>
      </div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {galleryImages.map((image) => (
          <div key={image.id} class="group relative overflow-hidden rounded-2xl shadow-lg transform transition duration-500 hover:scale-105">
            <div class="bg-gradient-to-br from-purple-500 to-pink-500 aspect-square flex items-center justify-center">
              <div class="text-white text-center p-4">
                <div class="text-4xl mb-3">
                  <i class="fas fa-feather-alt"></i>
                </div>
                <h3 class="font-bold text-xl group-hover:text-yellow-300 transition-colors">{image.title}</h3>
                <p class="text-sm opacity-80 mt-2">{image.category}</p>
              </div>
            </div>
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-4">
              <span class="text-white font-semibold">Click to explore</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* Interactive Animation Showcase */}
  <section class="py-16 bg-purple-800">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Quirky Animations</h2>
        <p class="max-w-2xl mx-auto text-purple-200">Watch chickens come alive in vibrant motion</p>
        <div class="w-24 h-1 bg-pink-500 mx-auto mt-4"></div>
      </div>
      
      <div class="flex flex-wrap justify-center gap-8 mb-12">
        <div class="relative">
          <div class="w-48 h-48 bg-gradient-to-br from-yellow-400 to-orange-500 rounded-full flex items-center justify-center shadow-xl animate-bounce">
            <div class="text-5xl text-white">
              <i class="fas fa-egg"></i>
            </div>
          </div>
          <div class="absolute -top-4 -right-4 bg-pink-500 text-white rounded-full w-10 h-10 flex items-center justify-center animate-spin">
            <i class="fas fa-star"></i>
          </div>
        </div>
        
        <div class="relative">
          <div class="w-48 h-48 bg-gradient-to-br from-pink-500 to-purple-500 rounded-full flex items-center justify-center shadow-xl animate-pulse">
            <div class="text-5xl text-white">
              <i class="fas fa-chess-knight"></i>
            </div>
          </div>
          <div class="absolute -bottom-4 -left-4 bg-yellow-400 text-purple-900 rounded-full w-10 h-10 flex items-center justify-center animate-bounce">
            <i class="fas fa-dove"></i>
          </div>
        </div>
      </div>
      
      <div class="max-w-4xl mx-auto bg-white/10 backdrop-blur-sm rounded-2xl p-8 text-center">
        <p class="text-xl text-white mb-4">Experience the magic of animated poultry in our interactive display</p>
        <div class="inline-flex items-center bg-yellow-400 text-purple-900 px-6 py-3 rounded-full font-bold shadow-lg transform transition duration-300 hover:scale-110">
          <i class="fas fa-play-circle mr-2"></i> Watch the Show
        </div>
      </div>
    </div>
  </section>

  {/* CTA Section */}
  <section class="py-20 bg-gradient-to-r from-pink-600 to-purple-700">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Ready to Join the Fun?</h2>
        <p class="text-xl text-purple-100 mb-10">Discover more of Chicken Cabaret's whimsical world</p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="px-8 py-4 bg-white text-purple-700 font-bold rounded-full shadow-lg transform transition duration-300 hover:scale-105 hover:bg-yellow-300">
            <i class="fas fa-ticket-alt mr-2"></i> Get Tickets
          </button>
          <button class="px-8 py-4 bg-transparent border-2 border-white text-white font-bold rounded-full shadow-lg transform transition duration-300 hover:scale-105 hover:bg-white/20">
            <i class="fas fa-calendar-alt mr-2"></i> View Schedule
          </button>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
    100% { transform: translateY(0px); }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  .animate-bounce-slow {
    animation: bounce 2s infinite;
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-15px); }
  }
</style>