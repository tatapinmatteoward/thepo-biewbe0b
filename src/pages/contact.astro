---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Contact Us";
const pageDescription = "Get in touch with The Poultry Post for insights on ethical poultry farming and chicken nutrition. We're here to answer your questions and share knowledge.";
const contactInfo = [
  { icon: "envelope", label: "Email", value: "info@thepoultrypost.com" },
  { icon: "phone", label: "Phone", value: "(555) 123-4567" },
  { icon: "map-marker-alt", label: "Mailing Address", value: "The Poultry Post, 123 Farm Lane, Poultryville, PV 12345" }
];

const socialLinks = [
  { name: "Facebook", url: "https://facebook.com/thepoultrypost", icon: "facebook-f" },
  { name: "Instagram", url: "https://instagram.com/thepoultrypost", icon: "instagram" },
  { name: "Twitter", url: "https://twitter.com/thepoultrypost", icon: "twitter" }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <div class="relative bg-gradient-to-br from-[#4b0026] to-[#556b2f] py-24 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-full h-full bg-[url('data:image/svg+xml;base64,')]"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-serif font-bold text-white mb-6 tracking-wide">Contact Us</h1>
        <p class="text-xl text-[#f5f5dc] italic">Get in touch with The Poultry Post for insights on ethical poultry farming and chicken nutrition.</p>
        <div class="mt-8 inline-block border-t-2 border-[#f5f5dc] pt-4">
          <p class="text-[#f5f5dc]">We're here to answer your questions and share knowledge.</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <section class="py-16 bg-gradient-to-b from-white to-[#f5f5dc]">
    <div class="container mx-auto px-4">
      <!-- Introduction -->
      <div class="max-w-4xl mx-auto mb-16 text-center">
        <div class="inline-block px-6 py-2 mb-4 bg-[#4b0026] text-white rounded-full text-sm font-medium">
          <i class="fas fa-feather-alt mr-2"></i>Connecting Farmers & Knowledge
        </div>
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-[#4b0026] mb-6">At The Poultry Post<span class="text-[#556b2f]">...</span></h2>
        <p class="text-lg text-gray-700 leading-relaxed">
          We believe in fostering a community dedicated to ethical poultry farming and superior chicken nutrition. 
          Whether you have questions about sustainable practices, need advice on feed formulations, or want to contribute 
          your own insights, we're eager to hear from you.
        </p>
      </div>

      <div class="flex flex-col lg:flex-row gap-12">
        <!-- Contact Information -->
        <div class="lg:w-1/2">
          <div class="bg-white rounded-xl shadow-lg p-8 border-2 border-[#4b0026] transform transition duration-300 hover:shadow-xl">
            <h3 class="text-2xl font-serif font-bold text-[#4b0026] mb-6 pb-2 border-b-2 border-[#556b2f]">Reach Out Today</h3>
            
            <div class="space-y-6">
              {contactInfo.map(({ icon, label, value }) => (
                <div class="flex items-start group">
                  <div class="flex-shrink-0 mt-1">
                    <div class="w-10 h-10 rounded-full bg-[#556b2f] flex items-center justify-center text-white">
                      <i class={`fas fa-${icon}`}></i>
                    </div>
                  </div>
                  <div class="ml-4">
                    <h4 class="font-bold text-[#4b0026]">{label}</h4>
                    <p class="text-gray-700 mt-1">{value}</p>
                  </div>
                </div>
              ))}
            </div>
            
            <div class="mt-10 pt-6 border-t-2 border-[#f5f5dc]">
              <h4 class="text-xl font-serif font-semibold text-[#4b0026] mb-4">Let's Stay Connected</h4>
              <p class="text-gray-700 mb-6">Follow us on social media for the latest updates and tips:</p>
              
              <div class="flex space-x-4">
                {socialLinks.map(({ name, url, icon }) => (
                  <a 
                    href={url} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="w-12 h-12 rounded-full bg-[#4b0026] flex items-center justify-center text-white hover:bg-[#556b2f] transition-colors duration-300"
                    aria-label={name}
                  >
                    <i class={`fab fa-${icon}`}></i>
                  </a>
                ))}
              </div>
            </div>
          </div>
        </div>

        <!-- Newsletter Signup -->
        <div class="lg:w-1/2">
          <div class="bg-gradient-to-br from-[#556b2f] to-[#4b0026] rounded-xl shadow-lg p-8 text-white h-full">
            <h3 class="text-2xl font-serif font-bold mb-2">Join Our Community</h3>
            <p class="mb-6 opacity-90">Subscribe to our newsletter for exclusive insights and updates</p>
            
            <form class="space-y-4">
              <div>
                <label for="email" class="block mb-2 font-medium">Your Email</label>
                <input 
                  type="email" 
                  id="email" 
                  placeholder="your@email.com" 
                  class="w-full px-4 py-3 rounded-lg text-gray-800 focus:outline-none focus:ring-2 focus:ring-[#f5f5dc]"
                  required
                />
              </div>
              
              <div>
                <label for="name" class="block mb-2 font-medium">Name</label>
                <input 
                  type="text" 
                  id="name" 
                  placeholder="Your full name" 
                  class="w-full px-4 py-3 rounded-lg text-gray-800 focus:outline-none focus:ring-2 focus:ring-[#f5f5dc]"
                  required
                />
              </div>
              
              <button 
                type="submit"
                class="w-full bg-[#f5f5dc] text-[#4b0026] font-bold py-3 px-6 rounded-lg hover:bg-[#e0e0c0] transition duration-300 transform hover:-translate-y-1"
              >
                Subscribe to Newsletter
              </button>
            </form>
            
            <div class="mt-8 pt-6 border-t border-[#f5f5dc]">
              <h4 class="font-bold mb-3 flex items-center">
                <i class="fas fa-check-circle text-[#f5f5dc] mr-2"></i> What You'll Receive:
              </h4>
              <ul class="space-y-2 opacity-90">
                <li class="flex items-start">
                  <i class="fas fa-chevron-right text-[#f5f5dc] mt-1 mr-2"></i>
                  <span>Weekly insights on ethical farming practices</span>
                </li>
                <li class="flex items-start">
                  <i class="fas fa-chevron-right text-[#f5f5dc] mt-1 mr-2"></i>
                  <span>Expert tips on chicken nutrition</span>
                </li>
                <li class="flex items-start">
                  <i class="fas fa-chevron-right text-[#f5f5dc] mt-1 mr-2"></i>
                  <span>Exclusive access to research findings</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Additional Info -->
      <div class="mt-16 max-w-4xl mx-auto bg-white rounded-xl shadow-lg p-8 border-2 border-[#556b2f]">
        <h3 class="text-2xl font-serif font-bold text-[#4b0026] mb-4">Send Us a Message</h3>
        <p class="text-gray-700 mb-6">Have specific questions or want to discuss a collaboration? Fill out the form below:</p>
        
        <form class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="first-name" class="block mb-2 font-medium text-gray-700">First Name</label>
              <input 
                type="text" 
                id="first-name" 
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#556b2f]"
                required
              />
            </div>
            
            <div>
              <label for="last-name" class="block mb-2 font-medium text-gray-700">Last Name</label>
              <input 
                type="text" 
                id="last-name" 
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#556b2f]"
                required
              />
            </div>
          </div>
          
          <div>
            <label for="subject" class="block mb-2 font-medium text-gray-700">Subject</label>
            <input 
              type="text" 
              id="subject" 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#556b2f]"
              required
            />
          </div>
          
          <div>
            <label for="message" class="block mb-2 font-medium text-gray-700">Message</label>
            <textarea 
              id="message" 
              rows="5" 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#556b2f]"
              required
            ></textarea>
          </div>
          
          <div class="text-center">
            <button 
              type="submit"
              class="bg-[#4b0026] text-white font-bold py-3 px-8 rounded-lg hover:bg-[#556b2f] transition duration-300 transform hover:scale-105"
            >
              Send Message
            </button>
          </div>
        </form>
      </div>
    </div>
  </section>
</Layout>

<style>
  @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');
  
  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
    opacity: 0;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .animate-slide-up {
    animation: slideUp 0.6s ease-out forwards;
    opacity: 0;
  }
  
  @keyframes slideUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .hover-lift {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .hover-lift:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.15);
  }
  
  .pattern-bg {
    background-image: 
      radial-gradient(circle at 10% 20%, rgba(255,255,255,0.1) 0%, transparent 20%),
      radial-gradient(circle at 90% 80%, rgba(255,255,255,0.1) 0%, transparent 20%);
  }
</style>

<script>
  // Simple form validation
  document.addEventListener('DOMContentLoaded', function() {
    const forms = document.querySelectorAll('form');
    
    forms.forEach(form => {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        const submitBtn = form.querySelector('button[type="submit"]');
        const originalText = submitBtn.textContent;
        
        submitBtn.disabled = true;
        submitBtn.textContent = 'Sending...';
        
        // Simulate form submission
        setTimeout(() => {
          submitBtn.textContent = 'Message Sent!';
          submitBtn.classList.add('bg-green-500');
          
          // Reset form after delay
          setTimeout(() => {
            form.reset();
            submitBtn.textContent = originalText;
            submitBtn.disabled = false;
            submitBtn.classList.remove('bg-green-500');
          }, 2000);
        }, 1500);
      });
    });
    
    // Add animations to elements when they come into view
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-fade-in');
        }
      });
    }, { threshold: 0.1 });
    
    document.querySelectorAll('.animate-fade-in').forEach(el => {
      observer.observe(el);
    });
  });
</script>