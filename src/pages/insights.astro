---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Insights into the Art of Roasting";
const pageDescription = "Delve into expert insights on the science and techniques behind achieving the perfect chicken roast, blending culinary artistry with scientific precision.";
const insights = [
  {
    title: "The Science Behind the Sizzle",
    content: "Roasting chicken isn't just about heat; it's a symphony of chemical reactions. The Maillard reaction, triggered at temperatures above 140°C (284°F), creates that irresistible golden crust and deep umami flavors."
  },
  {
    title: "Temperature Control Mastery",
    content: "Aim for 180-200°C (356-392°F) for even cooking without drying out the meat. Precision in temperature ensures optimal moisture retention and crisp exterior texture."
  },
  {
    title: "Moisture Balance Techniques",
    content: "Brining or dry-rubbing enhances juiciness by altering protein structures. These methods ensure your roast remains succulent while developing complex flavors."
  },
  {
    title: "The Art of Resting",
    content: "Allow 10-15 minutes for the meat to rest after roasting. This crucial step redistributes juices throughout the bird, ensuring every bite is perfectly moist."
  }
];
const benefits = [
  {
    icon: "fas fa-temperature-high",
    title: "Precision Heating",
    description: "Scientific temperature control for consistent results"
  },
  {
    icon: "fas fa-blender",
    title: "Flavor Enhancement",
    description: "Advanced techniques to maximize taste complexity"
  },
  {
    icon: "fas fa-hourglass-end",
    title: "Perfect Timing",
    description: "Optimal resting periods for ideal texture"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-[#2c3e50] to-[#1a2530] z-0"></div>
    <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-10 z-0"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="py-24 md:py-32 text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 tracking-tight">
          Insights into the Art of Roasting
        </h1>
        <p class="text-xl md:text-2xl text-[#e0e7ff] max-w-3xl mx-auto font-light">
          Unlocking the Science and Art of Perfect Chicken Roasts
        </p>
        <div class="mt-12 flex justify-center">
          <div class="w-24 h-1 bg-[#ff6b6b] rounded-full"></div>
        </div>
      </div>
    </div>
  </div>

  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="flex flex-col lg:flex-row gap-12 items-center">
        <div class="lg:w-1/2">
          <div class="relative">
            <div class="absolute -top-6 -left-6 w-full h-full border-2 border-[#2c3e50] rounded-xl z-0"></div>
            <div class="relative z-10 bg-[#f8fafc] p-8 md:p-12 shadow-lg">
              <h2 class="text-3xl font-bold text-[#2c3e50] mb-6">Unlocking the Secrets of Perfect Roasts</h2>
              <p class="text-gray-700 text-lg leading-relaxed mb-6">
                At <span class="font-semibold text-[#2c3e50]">Roasted Revelations</span>, we believe that every great roast tells a story—of flavor, technique, and a touch of culinary magic. Our insights explore the intersection of science and art, helping you elevate your roasting game from novice to master.
              </p>
              <p class="text-gray-700 text-lg leading-relaxed">
                Through understanding fundamental principles and applying time-tested techniques, you'll discover how to create restaurant-quality roasted chicken every time, with confidence and precision.
              </p>
            </div>
          </div>
        </div>
        <div class="lg:w-1/2">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {benefits.map((benefit, index) => (
              <div key={index} class="bg-[#f1f5f9] p-6 rounded-xl border border-[#e2e8f0] hover:shadow-md transition-all duration-300">
                <div class="text-[#ff6b6b] text-3xl mb-4">
                  <i class={benefit.icon}></i>
                </div>
                <h3 class="text-xl font-semibold text-[#2c3e50] mb-2">{benefit.title}</h3>
                <p class="text-gray-600">{benefit.description}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 md:py-24 bg-gradient-to-br from-[#2c3e50] to-[#1a2530] text-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">The Science of Success</h2>
        <div class="w-20 h-1 bg-[#ff6b6b] mx-auto"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {insights.map((insight, index) => (
          <div 
            key={index} 
            class="bg-white/10 backdrop-blur-sm p-8 rounded-xl border border-white/20 hover:bg-white/15 transition-all duration-300 group"
          >
            <div class="flex items-start mb-4">
              <div class="mr-4 mt-1 text-[#ff6b6b] text-xl">
                <i class="fas fa-flask"></i>
              </div>
              <h3 class="text-xl font-bold text-white group-hover:text-[#ff6b6b] transition-colors duration-300">{insight.title}</h3>
            </div>
            <p class="text-[#dbeafe] leading-relaxed">{insight.content}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-16 md:py-24 bg-[#f8fafc]">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-[#2c3e50] mb-6">Master Your Roasting Technique</h2>
        <p class="text-gray-700 text-lg mb-10">
          Transform your kitchen skills with these essential insights that combine culinary tradition with modern understanding.
        </p>
        
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
          <div class="p-8 md:p-12">
            <div class="flex flex-col md:flex-row items-center">
              <div class="md:w-2/3 mb-8 md:mb-0 md:pr-8">
                <h3 class="text-2xl font-bold text-[#2c3e50] mb-4">Professional Methods That Work</h3>
                <ul class="space-y-3 text-left">
                  <li class="flex items-start">
                    <i class="fas fa-check-circle text-[#ff6b6b] mt-1 mr-3"></i>
                    <span class="text-gray-700">Temperature monitoring with digital probes for precise results</span>
                  </li>
                  <li class="flex items-start">
                    <i class="fas fa-check-circle text-[#ff6b6b] mt-1 mr-3"></i>
                    <span class="text-gray-700">Marinade application techniques for enhanced flavor penetration</span>
                  </li>
                  <li class="flex items-start">
                    <i class="fas fa-check-circle text-[#ff6b6b] mt-1 mr-3"></i>
                    <span class="text-gray-700">Proper seasoning and herb combination for aromatic roasts</span>
                  </li>
                  <li class="flex items-start">
                    <i class="fas fa-check-circle text-[#ff6b6b] mt-1 mr-3"></i>
                    <span class="text-gray-700">Resting and carving techniques for maximum presentation</span>
                  </li>
                </ul>
              </div>
              <div class="md:w-1/3 flex justify-center">
                <div class="relative">
                  <div class="w-48 h-48 bg-gradient-to-br from-[#ff6b6b] to-[#2c3e50] rounded-full flex items-center justify-center">
                    <div class="w-40 h-40 bg-white rounded-full flex items-center justify-center">
                      <i class="fas fa-utensils text-6xl text-[#2c3e50]"></i>
                    </div>
                  </div>
                  <div class="absolute -bottom-4 -right-4 bg-[#ff6b6b] text-white px-6 py-2 rounded-full font-bold">
                    Expert Tips
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 md:py-24 bg-[#2c3e50] text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Elevate Your Culinary Journey</h2>
      <p class="text-xl text-[#dbeafe] max-w-2xl mx-auto mb-10">
        Each roast is an opportunity to refine your skills and create moments of pure satisfaction.
      </p>
      <button class="bg-[#ff6b6b] hover:bg-[#ff5252] text-white font-bold py-3 px-8 rounded-full text-lg transition-all duration-300 transform hover:scale-105 shadow-lg">
        Explore More Techniques
      </button>
    </div>
  </section>
</Layout>

<style>
  @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');
  
  .custom-card {
    transition: all 0.3s ease;
    border-radius: 12px;
    overflow: hidden;
  }
  
  .custom-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
  
  .gradient-border {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
  }
  
  .gradient-border::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, #2c3e50, #ff6b6b);
    z-index: -1;
    border-radius: 12px;
  }
  
  .backdrop-blur {
    backdrop-filter: blur(10px);
  }
</style>