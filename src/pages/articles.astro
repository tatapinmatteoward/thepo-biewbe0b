---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Latest Articles on Ethical Poultry Farming";
const pageDescription = "Explore insightful articles on sustainable chicken nutrition, ethical farming practices, and the latest trends in poultry care from The Poultry Post.";

const featuredArticles = [
  {
    title: "The Benefits of Forage-Based Diets for Backyard Chickens",
    excerpt: "In this in-depth guide, learn how incorporating natural foraging elements into your chickens' diet can enhance egg quality and overall health.",
    date: "October 2023",
    readTime: "8 min read",
    link: "#"
  },
  {
    title: "Ethical Sourcing: Navigating Supply Chains in Poultry Production",
    excerpt: "Understanding the complexities of responsible supply chain management for ethical poultry farming.",
    date: "September 2023",
    readTime: "6 min read",
    link: "#"
  },
  {
    title: "Sustainable Housing Solutions for Modern Poultry Farms",
    excerpt: "Innovative housing designs that balance animal welfare with environmental sustainability.",
    date: "August 2023",
    readTime: "10 min read",
    link: "#"
  },
  {
    title: "Breeding Practices for Resilient Chicken Flocks",
    excerpt: "How selective breeding contributes to healthier, more robust poultry populations.",
    date: "July 2023",
    readTime: "7 min read",
    link: "#"
  },
  {
    title: "The Science Behind Egg Quality and Chicken Diet",
    excerpt: "Exploring the nutritional factors that influence egg composition and shell strength.",
    date: "June 2023",
    readTime: "9 min read",
    link: "#"
  },
  {
    title: "Natural Pest Control Methods in Poultry Environments",
    excerpt: "Eco-friendly strategies for maintaining pest-free poultry operations without harmful chemicals.",
    date: "May 2023",
    readTime: "5 min read",
    link: "#"
  }
];

const categories = [
  { name: "Nutrition", count: 12 },
  { name: "Ethics", count: 8 },
  { name: "Sustainability", count: 15 },
  { name: "Health", count: 9 },
  { name: "Housing", count: 7 },
  { name: "Breeding", count: 5 }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <div class="relative bg-gradient-to-br from-[#4b0026] to-[#556b2f] py-24 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-full h-full bg-[url('data:image/svg+xml;base64,')]" />
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-serif font-bold text-white mb-6 leading-tight">
          Latest Articles on <span class="text-yellow-300">Ethical Poultry</span> Farming
        </h1>
        <p class="text-xl text-gray-100 mb-8 max-w-2xl mx-auto">
          Explore insightful articles on sustainable chicken nutrition, ethical farming practices, and the latest trends in poultry care from The Poultry Post.
        </p>
        <div class="flex justify-center space-x-4">
          <div class="bg-white/10 backdrop-blur-sm rounded-full px-6 py-3 text-white border border-white/20">
            <i class="fas fa-feather-alt mr-2"></i> 
            <span>120+ Articles</span>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-full px-6 py-3 text-white border border-white/20">
            <i class="fas fa-seedling mr-2"></i> 
            <span>Sustainable Practices</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Category Filter Section -->
  <div class="py-16 bg-gradient-to-b from-white to-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-serif font-semibold text-[#4b0026] mb-4">Browse by Category</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">Discover content tailored to your interests in ethical poultry farming</p>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
        {categories.map((category) => (
          <div 
            class="group cursor-pointer rounded-xl p-6 bg-white shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 border border-gray-100"
            style="background: linear-gradient(145deg, #ffffff, #f8f9fa);"
          >
            <div class="text-center">
              <div class="mx-auto w-16 h-16 rounded-full bg-[#4b0026]/10 flex items-center justify-center mb-4 group-hover:bg-[#4b0026]/20 transition-colors">
                <i class="fas fa-tag text-[#4b0026] text-xl"></i>
              </div>
              <h3 class="font-serif font-medium text-[#4b0026] mb-1">{category.name}</h3>
              <p class="text-sm text-gray-500">{category.count} articles</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Featured Articles Section -->
  <div class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-serif font-bold text-[#4b0026] mb-4">Featured Articles</h2>
        <div class="w-24 h-1 bg-[#556b2f] mx-auto mb-6"></div>
        <p class="text-gray-600 max-w-3xl mx-auto">
          Discover insights into ethical poultry farming that combine traditional wisdom with modern scientific understanding
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredArticles.map((article, index) => (
          <article 
            key={index} 
            class="group bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-100"
          >
            <div class="relative">
              <div class="h-48 bg-gradient-to-r from-[#4b0026] to-[#556b2f] flex items-center justify-center">
                <i class="fas fa-book-open text-white text-5xl opacity-70"></i>
              </div>
              <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full text-xs font-medium text-[#4b0026]">
                {article.readTime}
              </div>
            </div>
            
            <div class="p-6">
              <div class="flex items-center text-sm text-gray-500 mb-3">
                <i class="far fa-calendar mr-2"></i> {article.date}
              </div>
              
              <h3 class="text-xl font-serif font-semibold text-[#4b0026] mb-3 group-hover:text-[#556b2f] transition-colors">
                {article.title}
              </h3>
              
              <p class="text-gray-600 mb-4 line-clamp-2">
                {article.excerpt}
              </p>
              
              <a 
                href={article.link} 
                class="inline-flex items-center text-[#556b2f] font-medium group-hover:text-[#4b0026] transition-colors"
              >
                Read Full Article
                <i class="fas fa-arrow-right ml-2 text-sm"></i>
              </a>
            </div>
          </article>
        ))}
      </div>

      <!-- Load More Button -->
      <div class="text-center mt-12">
        <button class="px-8 py-3 bg-[#4b0026] text-white font-medium rounded-full hover:bg-[#556b2f] transition-colors shadow-lg hover:shadow-xl transform hover:-translate-y-1">
          Load More Articles
        </button>
      </div>
    </div>
  </div>

  <!-- Newsletter CTA -->
  <div class="py-20 bg-gradient-to-r from-[#4b0026] to-[#556b2f]">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-white mb-4">Stay Updated</h2>
        <p class="text-lg text-gray-100 mb-8">
          Join our newsletter for the latest articles on ethical poultry farming and sustainable nutrition
        </p>
        
        <form class="flex flex-col sm:flex-row gap-4 max-w-lg mx-auto">
          <input 
            type="email" 
            placeholder="Your email address" 
            class="flex-grow px-6 py-3 rounded-full focus:outline-none focus:ring-2 focus:ring-white/50"
          />
          <button 
            type="submit"
            class="px-8 py-3 bg-white text-[#4b0026] font-medium rounded-full hover:bg-gray-100 transition-colors shadow-lg"
          >
            Subscribe
          </button>
        </form>
        
        <p class="text-gray-200 text-sm mt-4">
          No spam, unsubscribe anytime
        </p>
      </div>
    </div>
  </div>
</Layout>

<style>
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }

  .floating {
    animation: float 6s ease-in-out infinite;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .hero-pattern {
    background-image: 
      radial-gradient(circle at 10% 20%, rgba(255, 255, 255, 0.05) 0%, transparent 20%),
      radial-gradient(circle at 90% 80%, rgba(255, 255, 255, 0.05) 0%, transparent 20%);
  }

  .category-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
</style>